@page
@model VaccineCovidManager.Web.Pages.DonViYTes.IndexModel
@using Microsoft.Extensions.Localization
@using VaccineCovidManager.Localization
@inject IStringLocalizer<VaccineCovidManagerResource> L
@section scripts
{
    <abp-script src="/Pages/DonViYTes/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
        <abp-card-title>@L["Đơn vị Y tế"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="DonViYTeButton"
                            text="@L["Tạo mới Đơn vị Y tế"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="DonViYTeTable"/>
    </abp-card-body>
</abp-card>
