@page
@model VaccineCovidManager.Web.Pages.NoiSanXuats.IndexModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authorization
@using VaccineCovidManager.Localization
@using VaccineCovidManager.Permissions
@inject IAuthorizationService AuthorizationService
@inject IStringLocalizer<VaccineCovidManagerResource> L
@section scripts
{
    <abp-script src="/Pages/NoiSanXuats/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Nhà sản xuất"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
            @if (await AuthorizationService.IsGrantedAsync(VaccineCovidManagerPermissions.NoiSanXuats.Create))
            {
                <abp-button id="NoiSanXuatButton"
                        text="@L["Tạo mới Nhà sản xuất"].Value"
                        icon="plus"
                        button-type="Primary" />
            }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="NoiSanXuatTable"/>
    </abp-card-body>
</abp-card>