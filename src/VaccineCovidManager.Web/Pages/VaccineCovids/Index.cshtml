@page
@model VaccineCovidManager.Web.Pages.VaccineCovids.IndexModel
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authorization
@using VaccineCovidManager.Localization
@using VaccineCovidManager.Permissions
@inject IAuthorizationService AuthorizationService
@inject IStringLocalizer<VaccineCovidManagerResource> L
@section scripts
{
    <abp-script src="/Pages/VaccineCovids/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Vaccine tồn kho"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
            @if (await AuthorizationService.IsGrantedAsync(VaccineCovidManagerPermissions.VaccineCovids.Create))
            {
                <abp-button id="VaccineCovidButton"
                        text="@L["Tạo mới Vaccine"].Value"
                        icon="plus"
                        button-type="Primary" />
            }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="VaccineTable"/>
    </abp-card-body>
</abp-card>
